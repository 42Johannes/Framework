<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <ProjectType>Library</ProjectType>
  </PropertyGroup>
  <Import Project="..\..\..\Build\Shared.build.props" />
  <PropertyGroup>
    <AssemblyTitle>re-motion ObjectBinding Web Client Scripts</AssemblyTitle>
    <Description>Client Scripts for re-motion's ObjectBinding web controls.</Description>
    <AssemblyName>Remotion.ObjectBinding.Web.ClientScript</AssemblyName>
    <RootNamespace>$(AssemblyName)</RootNamespace>
    <IsPackable>False</IsPackable>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="tsconfig\debug\tsconfig.json" Condition="'$(Configuration)' == 'Debug'" />
    <Content Include="tsconfig\release\tsconfig.json" Condition="'$(Configuration)' == 'Release'" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="jquery.TypeScript.DefinitelyTyped" Version="1.6.4">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="microsoft-ajax.TypeScript.DefinitelyTyped" Version="0.1.4">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="4.1.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <TypeScriptCompile Include="..\..\Web\ClientScript\Scripts\typings\common.d.ts">
      <Link>Scripts\typings\common.d.ts</Link>
    </TypeScriptCompile>
  </ItemGroup>
  <Import Project="..\..\..\Build\Shared.build.targets" />
</Project>